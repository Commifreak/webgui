<?
echo "<center><font class='error xs'>Error</font><font class='warn xs'>Warning</font><font class='system xs'>System</font><font class='array xs'>Array</font></center>\n";

require_once '/usr/local/emhttp/webGui/include/ColorCoding.php';

$ata = exec("ls -n /sys/block/{$argv[1]}|grep -Po 'ata\d+'");
$dev = $ata ? "${argv[1]}|${ata}[.:]" : $argv[1];

exec("grep -P '$dev' /var/log/syslog", $lines);

foreach ($lines as $line) {
  if (strpos($line,'disk_log')!==false) continue;
  $font = "font";
  foreach ($match as $type) foreach ($type['text'] as $text) if (preg_match("/$text/i",$line)) {$font = "font class='{$type['class']}'"; break 2;}
  echo "<$font>".htmlentities($line)."</font>\n";
}
?>