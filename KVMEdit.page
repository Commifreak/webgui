function arrayOptions($array, $array2, $value) {
		for ($i = 0; $i < sizeof($array); $i++) {
		echo "<option value='$array[$i]'";
		if ($array[$i] == $value)
			echo " selected='selected'>$array2[$i] *</option>";
		else
  			echo ">$array2[$i]</option>";
	}
}

function memOptions($maxmem, $mem) {
	for ($i = 1; $i <= ($maxmem*2); $i++) {
  		$mem2 = ($i*512);
  		echo "<option value='$mem2'";
		if ((int)($mem/1024) == $mem2)
			echo " selected='selected'>$mem2 *</option>";
		else
        	echo ">$mem2</option>";
	}
}
